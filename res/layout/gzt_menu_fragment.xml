<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    tools:ignore="SpUsage,HardcodedText" 
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_gzt_dbtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radio_buttong_bg"
            android:checked="false"
            android:gravity="center"
            android:text="待办提醒"
            android:textColor="@color/top_category_scroll_text_color_day"
            android:textSize="16dip"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_gzt_rcgz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radio_buttong_bg"
            android:checked="false"
            android:gravity="center"
            android:text="日常工作"
            android:textColor="@color/top_category_scroll_text_color_day"
            android:textSize="16dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_gzt_gzjh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radio_buttong_bg"
            android:checked="false"
            android:gravity="center"
            android:text="工作计划"
            android:textColor="@color/top_category_scroll_text_color_day"
            android:textSize="16dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_gzt_txsz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radio_buttong_bg"
            android:checked="false"
            android:gravity="center"
            android:text="提醒设置"
            android:textColor="@color/top_category_scroll_text_color_day"
            android:textSize="16dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_gzt_xgmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radio_buttong_bg"
            android:checked="false"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/top_category_scroll_text_color_day"
            android:textSize="16dip" />
    </RelativeLayout>

</LinearLayout>