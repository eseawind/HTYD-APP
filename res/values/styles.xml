<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light" />
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 主界面 -->
    <style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>

    <style name="topbar_text">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">7.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/menu_clk</item>
    </style>

    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">7.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TitleLeft">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#0000CC</item>
        <item name="android:background">#EFEEE2</item>
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginRight">1px</item>
    </style>

    <style name="ContentRight">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#0000CC</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginRight">1px</item>
    </style>

    <style name="TitleEnd">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#0000CC</item>
        <item name="android:background">#EFEEE2</item>
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>

    <style name="ContentEnd">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#0000CC</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>

    <style name="TableBg">
        <item name="android:background">#000000</item>
    </style>

    <style name="TableRowBg">
        <item name="android:background">#ffff00</item>
    </style>

    <!-- 十字交叉表 -->
    <style name="Title_jc">
        <item name="android:background">#ffff00</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>
    <!-- 顶部的linearlayout控件 -->
    <style name="linearlayout_top">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>
    <!-- linearlayout里的textview的样式 -->
    <style name="textview_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textview" parent="textview_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textColor">#1E90FF</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textview1" parent="textview_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="textview4" parent="textview_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="textview5">
        <item name="android:layout_width">300dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">#FFFAFA</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <!-- linearlayout里的edittext的样式 -->
    <style name="edittext_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">3.5dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="edittext" parent="edittext_base">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="edittext1" parent="edittext_base">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginLeft">6dip</item>
    </style>
    <!-- linearlayout控件的公共样式 -->
    <style name="linearlayout_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 有边框的linearlayout -->
    <style name="linearlayout_border" parent="linearlayout_base">
        <item name="android:background">@drawable/shape_linearlayout</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearlayout_border1" parent="linearlayout_base">
        <item name="android:background">@drawable/shape_linearlayout2</item>
    </style>

    <style name="linearlayout_border2" parent="linearlayout_base">
        <item name="android:background">@drawable/shape_linearlayout3</item>
    </style>

    <style name="linearlayout_border3" parent="linearlayout_base">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearlayout_border4" parent="linearlayout_base">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="button_base2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:textColor">#FFFAFA</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="button1" parent="button_base2">
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="button2" parent="button_base2">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="DialogStyle" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <!--
             <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
        -->
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <!-- 左导航 -->
    <style name="left_drawer_item_line">
        <item name="android:background">@color/left_drawer_item_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>

    <style name="left_drawer_item_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/left_drawer_item_bg</item>
        <item name="android:paddingLeft">40.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
